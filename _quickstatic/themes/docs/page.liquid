      property="og:title"
      content="{% if this.frontmatter.ogTitle %}{{this.frontmatter.ogTitle}}{% else %}{{this.frontmatter.title}}{% endif %} | APItoolkit Docs"
    >
    <meta property="og:description" content="APItoolkit product and SDKs documentation">
    <meta
      property="og:image"
      content="{% if this.frontmatter.ogImage%}{{this.frontmatter.ogImage}}{% else %}https://raw.githubusercontent.com/apitoolkit/.github/main/images/docs-og.png{% endif %}"
    >
    <meta
      property="og:type"
      content="{% if this.frontmatter.ogType %}{{this.frontmatter.ogType}}{% else %}article{% endif %}"
    >

    <!-- Favicon items -->
    <link rel="apple-touch-icon" sizes="180x180" href="/static/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/static/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/static/favicon-16x16.png">
    <link rel="manifest" href="/static/site.webmanifest">
    <link rel="mask-icon" href="/static/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">
    <base href="{{ this.permalink }}">

    <!-- Stylesheets and Scripts -->
    <link rel="stylesheet" href="/assets/css/tailwind.min.css">
    <script defer src="https://kit.fontawesome.com/32c218ff10.js" crossorigin="anonymous"></script>
    <script defer src="/assets/deps/htmx/htmx.min.js"></script>
    <script defer src="/assets/deps/htmx/preload.js"></script>
    <script defer src="https://unpkg.com/hyperscript.org@0.9.12"></script>
    <style>
      h1 {
        font-variation-settings: 'wght' 700, 'mono' 1000;
      }

      h2 {
        font-variation-settings: 'wght' 600, 'mono' 500;
      }

      h3,
      h4,
      h5 {
        font-variation-settings: 'wght' 500, 'mono' 500;
      }

      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        position: relative;
        cursor: pointer;
      }

      .header-link {
        position: absolute;
        left: -20;
        top: 5px;
        display: none;
        text-decoration: none;
        color: #737373;
        cursor: pointer;
        font-size: 0.7rem;
        padding-right: 20px;
      }

      h1:hover .header-link,
      h2:hover .header-link,
      h3:hover .header-link,
      h4:hover .header-link,
      h5:hover .header-link,
      h6:hover .header-link,
      .header-link:hover {
        display: inline;
      }

      .docs-card {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 16rem;
        text-decoration: none;
        border-width: 2px;
        border-color: #b3b3b3;
        filter: drop-shadow(0 4px 3px rgb(0 0 0 / 0.07));
      }

      .docs-card:hover {
        border-color: #377cfb;
        transform: translateY(-0.7rem);
        transition-duration: 300ms;
      }

      .docs-card-2 {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 12rem;
        text-decoration: none;
        border-width: 2px;
        border-color: #b3b3b3;
      }

      .docs-card-2:hover {
        border-color: #377cfb;
        transform: translateY(-0.5rem);
        transition-duration: 300ms;
      }

      .callout {
        background-color: #f7f7f7;
        border-left: 6px solid #377cfb;
        padding: 16px;
        margin: 16px 0;
        border-radius: 4px;
      }

      .callout p:first-of-type {
        margin-top: 5px;
      }

      .callout ol:first-of-type {
        margin-top: 5px;
      }

      .callout p svg {
        margin-right: 5px;
      }

      .callout-red {
        border-left: 6px solid #ff3131 !important;
      }

      [data-theme='sunset'] .callout {
        background-color: #c5c5c5;
        color: #36454f;
      }

      [data-theme='sunset'] .callout code {
        background: #282c34;
      }

      .docs-table table thead tr th {
        font-weight: bold;
        text-align: left;
        padding: 0 10px 5px 10px;
      }

      .docs-table table thead tr th:first-child {
        border-right: 1px solid #eeeeef;
      }

      .docs-table table tbody tr td:first-child {
        border-right: 1px solid #eeeeef;
      }

      .docs-table table tbody tr td {
        vertical-align: middle !important;
        padding: 10px;
      }

      .btn {
        text-decoration: none !important;
      }

      .t-white {
        color: #ffffff !important;
      }

      .t-black {
        color: #000000 !important;
      }

      /*
      DO NOT REMOVE
      This is for the images in integration-footer.liquid
      */
      button img {
        border-width: 0px !important;
        --tw-drop-shadow: none !important;
      }
      div #sdk-images img {
        border-width: 0px !important;
        --tw-drop-shadow: none !important;
      }

      /* Styling for tabs component */
      .tab-button {
        padding: 10px 20px;
        cursor: pointer;
        border: 1px solid #ccc;
        border-bottom: none;
        border-radius: 5px 5px 0 0;
        margin-right: 5px;
      }
      .tab-button.active {
        border-bottom: 2px solid #377cfb;
      }
      .tab-content {
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 0 5px 5px 5px;
      }
      .tab-content.active {
        display: block;
      }

      .faq-answer a {
        color: #ffffff;
        text-decoration: underline;
      }
    </style>

