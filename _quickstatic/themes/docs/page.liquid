    <section class="sticky top-0 w-full bg-base-100 z-10 border-b border-b-base-200">
      <section class="text-center border-b border-b-base-200">
        <div class="max-w-7xl w-full py-4 px-4 text-left inline-flex justify-between items-center">
          <a href="/" class="px-1 py-1" aria-label="Back to homepage">
            <img class="h-7 dark:hidden" src="/assets/brand/logo_full_color.svg" alt="APItoolkit full color logo">
            <img
              class="h-7 hidden dark:inline-block"
              src="/assets/brand/logo_full_white.svg"
              alt="APItoolkit white logo"
            >
          </a>
          <div class="flex gap-4 items-center">
            <a href="/" class="hidden sm:inline-block text-sm text-secondary">↢&nbsp;Back to Website</a>
            <a class="cursor-pointer sm:hidden" onClick="search_modal.showModal()" aria-label="search" title="Search">
              <svg class="icon h-4 w-4 text-current fill-current stroke-current opacity-70">
                <use xlink:href="/assets/deps/fontawesome/solid.svg#magnifying-glass"></use>
              </svg>
            </a>
            <a href="https://app.apitoolkit.io?utm_source=docs" class="btn btn-sm btn-secondary">Sign Up</a>

            <a
              class="input input-sm bg-slate-50 dark:bg-base-200 input-bordered hidden sm:flex items-center gap-2"
              onClick="search_modal.showModal()"
              aria-label="search"
              title="Search"
            >
              <svg class="icon h-4 w-4 text-current fill-current stroke-current opacity-70">
                <use xlink:href="/assets/deps/fontawesome/solid.svg#magnifying-glass"></use>
              </svg>
              <span class="grow px-3">Search</span>
              <kbd class="kbd kbd-sm">⌘K</kbd>
            </a>
            <dialog id="search_modal" class="modal modal-top justify-center" hx-boost="false">
              <div id="search" class="modal-box max-w-xl w-full"></div>
              <form method="dialog" class="modal-backdrop mt-24">
                <button>close</button>
              </form>
            </dialog>
            <label class="swap swap-rotate" for="theme-control">
              <input
                type="checkbox"
                id="theme-control"
                class="theme-controller"
                value="sunset"
                _="
                  on change localStorage.setItem('darkMode', me.checked)
                  then if  me.checked set body's @data-theme to 'sunset' else set body's @data-theme to 'emerald'
                "
              >
              <svg class="swap-off icon h-5 w-5 text-current fill-current stroke-current opacity-70">
                <use xlink:href="/assets/deps/fontawesome/light.svg#moon-stars"></use>
              </svg>
              <svg class="swap-on icon h-5 w-5 text-current fill-current stroke-current opacity-70">
                <use xlink:href="/assets/deps/fontawesome/light.svg#sun-bright"></use>
              </svg>
            </label>
            <script>
              if (localStorage.getItem('darkMode') === 'true') {
                document.getElementById('theme-controller').checked = true;
              }
            </script>
          </div>
        </div>
      </section>

      <section class="text-center">
        <div class="max-w-7xl w-full gap-4 text-md hidden sm:inline-flex sm:ml-8">
          {% capture root_menu_items %}
        {% assign is_home = this.frontmatter.title | equals: "Home" %}
        <a class="flex gap-3 sm:border-b-2 {{ is_home | ternary: 'sm:border-b-secondary text-secondary sm:text-current ', 'border-b-transparent' }} py-2 px-1 items-center"
          href="/docs/" preload="preload:init" title="Documentation Home" aria-label="Documentation Home">
          <svg
            class="icon h-5 w-5 text-current fill-current stroke-current  {{ is_home | ternary: 'text-secondary', '' }}">
            <use xlink:href="/assets/deps/fontawesome/regular.svg#house"></use>
          </svg>
          <span>Home</span>
        </a>
        {% assign pages = file_list | where_glob: 'file_path', "./docs/*/index.md" | sort: 'frontmatter.menuWeight' %}
        {% for page in pages %}
        {% assign parent_doc_prefix = page.file_path | remove: "index.md" | remove_first: "." %}
        {% assign is_active = this.permalink | starts_with: parent_doc_prefix %}
        <a class="flex gap-3 sm:border-b-2 {{ is_active | ternary: 'sm:border-b-secondary text-secondary sm:text-current', 'border-b-transparent' }} py-2 px-1 items-center"
          href="{{ page.permalink }}">
          <i
            class="fa-regular fa-{% if page.frontmatter.faLogo %}{{ page.frontmatter.faLogo }}{%else%}star{%endif%} w-5 h-5 {{ is_active | ternary: 'text-secondary', '' }}"></i>
          <span>{{ page.frontmatter.title | default: 'Untitled' }}</span>
        </a>
        {% endfor %}
        {% endcapture %}
          {{ root_menu_items }}
        </div>
      </section>
    </section>
    <section class="text-center">
      <div class="max-w-7xl w-full text-left inline-flex ">
        <!--
          Placed here to be situated infront of the conditional below, since the conditional clause does't affect mobile
        -->
        {% capture main_menu_items %}
      {% assign parts = this.permalink | split: '/' %}
      {% assign parent_doc_section = parts[2] %}
      {% capture glob_pattern %}./docs/{{ parent_doc_section }}/*/index.md{% endcapture %}
      {% assign pages = file_list | where_glob: 'file_path', glob_pattern | sort: 'frontmatter.menuWeight' %}
      {% for page in pages %}
      <section class="pl-1">
      <!-- FILE TREE PARENT -->
        <a class="block font-semibold pb-3" href="{{ page.permalink }}">{{ page.frontmatter.title }}</a>
        {% capture glob_pattern1 %}.{{ page.permalink }}*/index.md{% endcapture %}
        <!-- In an idea scenario, we will sort this automatically based on "frontmatter.title"
             but the dashboard guides page requires custom sorting and will conflict with the
             sdk guides page. Hence all markdown files for now will have "menuWeight"
          -->
        {% assign subpages = file_list | where_glob: 'file_path', glob_pattern1 | sort: 'frontmatter.menuWeight' %}
        {% if subpages.size > 0 %}
        <!-- FILE TREE CHILDREN -->
        <ul class="space-y-2">
          {% for subpage in subpages %}
          <li>
            {% assign is_active_page = subpage.permalink | equals: this.permalink %}
            <a href="{{ subpage.permalink }}"
               class="hover:text-secondary {{ is_active_page | ternary: 'text-secondary', '' }}">{{
               subpage.frontmatter.title }}</a>
            {% capture glob_pattern2 %}.{{ subpage.permalink }}*/index.md{% endcapture %}
            {% assign subsubpages = file_list | where_glob: 'file_path', glob_pattern2 | sort %}
            {% if subsubpages.size > 0 %}
            <ul class="pl-5 space-y-2 pt-2">
              {% for subsubpage in subsubpages %}
              <li>
                {% assign is_active_subpage = subsubpage.permalink | equals: this.permalink %}
                <a href="{{ subsubpage.permalink }}"
                  class="hover:text-secondary {{ is_active_subpage | ternary: 'text-secondary', '' }}">{{
                  subsubpage.frontmatter.title }}</a>
              </li>
              {% endfor %}
            </ul>
            {% endif %}
          </li>
          {% endfor %}
        </ul>
        {% endif %}
      </section>
      {% endfor %}
      {% endcapture %}
        {% unless this.frontmatter.hideFileTree %}
          <div class="w-64 leading-relaxed border-r border-r-base-200 hidden sm:block ">
            <nav class="h-full w-64 space-y-8 text-sm py-48 pr-5 fixed top-0 overflow-y-scroll">
              {{ main_menu_items }}
            </nav>
          </div>
        {% endunless %}
        <!-- Navigation drawer used on Mobile only -->
        <div class="drawer fixed top-0 z-50">
          <input id="mobile-menu-drawer" type="checkbox" class="drawer-toggle">
          <div class="drawer-side">
            <label for="mobile-menu-drawer" aria-label="close sidebar" class="drawer-overlay"></label>
            <div class="p-5 w-80 min-h-full bg-base-100 text-base-content clear-both">
              <label for="mobile-menu-drawer" class="p-5 float-right">
                <svg class="shrink-0 icon h-5 w-5 text-current fill-current stroke-current opacity-70">
                  <use xlink:href="/assets/deps/fontawesome/regular.svg#xmark"></use>
                </svg>
              </label>
              <div class="space-y-5 pt-5">
                <section>
                  {{ root_menu_items }}
                </section>
                <section class="py-5 space-y-5">
                  {{ main_menu_items }}
                </section>
              </div>
            </div>
          </div>
        </div>

        <div class="flex-1 grow flex relative min-h-screen">
          <div class="text-center flex-1 grow p-5 pt-12 sm:p-20 sm:pb-28 pb-40 divide-y divide-y-base-200">
            <article
              class="
                text-left pb-12 prose prose-slate dark:prose-invert prose-headings:font-medium prose-a:text-secondary prose-a:underline prose-a:underline-offset-4
                prose-img:w-full prose-img:rounded-md prose-img:drop-shadow-md prose-img:border prose-img:border-base-200  prose-p:leading-relaxed
                prose-headings:scroll-mt-40 prose-pre:p-0
                before:prose-li:bg-secondary before:prose-li:text-secondary
                prose-strong:font-medium prose-secondary w-full {%if this.frontmatter.pageFullWidth%}max-w-none {%endif%}
              "
              id="mainArticle"
            >
              {{ this.content }}
            </article>
            <footer class="text-center py-12 space-y-2">
              <h5 class="font-semibold">Need assistance or have some feedback for us? You can reach out to us at:</h5>
              <p>
                <i class="fa-regular fa-envelope"></i>
                <a
                  class="link"
                  href="mailto:hello@apitoolkit.io"
                  >hello@apitoolkit.io</a
                >
                |
                <i class="fa-brands fa-discord"></i>
                <a
                  class="link"
                  href="https://apitoolkit.io/discord"
                  target="_blank"
                  rel="noopener noreferrer"
                  >Discord Community Server</a
                >
                |
                <i class="fa-brands fa-github"></i>
                <a
                  class="link"
                  href="https://github.com/apitoolkit/apitoolkit-landing/issues/new/choose"
                  target="_blank"
                  rel="noopener noreferrer"
                  >GitHub Community Issues</a
                >
              </p>
            </footer>
          </div>
        </div>
        {% unless this.frontmatter.hideToc %}
          <section class="w-56 hidden sm:block">
            <div class="w-56 my-48 fixed top-0 text-sm space-y-4">
              <strong class="block font-medium">On this page:</strong>
              <ul class="space-y-2 border-l overflow-y-auto max-h-[calc(100vh-8rem)]" id="tableOfContents">
                {% for toc in this.toc %}
                  <li class="hover:underline underline-offset-4 pl-{{toc.level | times: 3}}">
                    <a href="#{{toc.id}}">{{ toc.title }}</a>
                  </li>
                {% endfor %}
              </ul>
            </div>
          </section>
        {% endunless %}
      </div>
    </section>

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/styles/atom-one-dark.min.css"
    >
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/highlight.min.js"></script>
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/languages/go.min.js"></script>
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/languages/javascript.min.js"></script>
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/languages/php.min.js"></script>
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/languages/csharp.min.js"></script>
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/languages/python.min.js"></script>
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/languages/elixir.min.js"></script>
    <script defer src="/assets/js/tabs.js"></script>

    <script defer type="text/javascript">
      document.addEventListener('DOMContentLoaded', function () {
        hljs.highlightAll();
      });

      function init() {
        // Select all headers
        const headers = document.querySelectorAll(
          '#mainArticle h1, #mainArticle h2, #mainArticle h3, #mainArticle h4,#mainArticle h5,#mainArticle h6'
        );
        headers.forEach((header) => {
          const hashtag = document.createElement('a');
          hashtag.classList.add('header-link');
          hashtag.textContent = '🔗 ';
          hashtag.href = '#' + header.id;
          header.insertBefore(hashtag, header.firstChild);
        });

        const observer = new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                document.querySelectorAll('#tableOfContents a').forEach((link) => {
                  if (link.getAttribute('href').substring(1) === entry.target.id) {
                    document.querySelectorAll('#tableOfContents a').forEach(function (element) {
                      element.classList.remove('text-secondary');
                    });
                    link.classList.add('text-secondary');
                  }
                });
              }
            });
          },
          { rootMargin: '0px', threshold: 0.0001 }
        );

        // Observe all headings within the article
        document
          .querySelectorAll(
            '#mainArticle h1, #mainArticle h2, #mainArticle h3, #mainArticle h4, #mainArticle h5, #mainArticle h6'
          )
          .forEach((heading) => {
            observer.observe(heading);
          });
      }

      function toggleFaq(e) {
        e.currentTarget.nextElementSibling.classList.toggle('hidden');
        e.currentTarget.firstElementChild.classList.toggle('rotate-90');
      }
      init();

      document.body.addEventListener('htmx:afterSwap', function (event) {
        window.requestAnimationFrame(() => {
          init();
          hljs.highlightAll();
        });
      });
    </script>
  </body>
