    <script>
      if (localStorage.getItem('darkMode') === 'true') {
        document.body.setAttribute('data-theme', 'sunset');
      }
    </script>

    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-TF4BQQ3D"
        height="0"
